{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "target": "ESNext",
        "module": "CommonJS",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "baseUrl": ".",
        "noImplicitReturns": true,
        "moduleResolution": "nodenext",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@/*": ["./src/*"],
            "@lib/*": ["./src/lib/*"],
            "@util/*": ["./src/util/*"],
            "@types/*": ["./src/interfaces/*"]
        }
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*"]
}